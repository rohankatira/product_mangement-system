<%- include('../partials/header.ejs') %>

<div class="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6">
        <div class="card">
          <form method="post" action="/editProduct/<%= product._id %>">
            <div class="card-body">
              <h4 class="card-title">Edit Product</h4>
              
              <div class="form-group">
                <label>Name</label>
                <input type="text" name="name" class="form-control" value="<%= product.name %>" required />
              </div>
              <div class="form-group">
                <label>Price</label>
                <input type="number" name="price" class="form-control" value="<%= product.price %>" required />
              </div>
              <div class="form-group">
                <label>Discount</label>
                <input type="number" name="discount" class="form-control" value="<%= product.discount %>" />
              </div>
              <div class="form-group">
                <label>Brand</label>
                <input type="text" name="brand" class="form-control" value="<%= product.brand %>" />
              </div>
              <div class="form-group">
                <label>Model Number</label>
                <input type="text" name="modelNumber" class="form-control" value="<%= product.modelNumber %>" />
              </div>
              <div class="form-group">
                <label>Stock</label>
                <input type="number" name="stock" class="form-control" value="<%= product.stock %>" />
              </div>
              <div class="form-group">
                <label>Batch Number</label>
                <input type="text" name="batchNumber" class="form-control" value="<%= product.batchNumber %>" />
              </div>
              <div class="form-group">
                <label>Manufacturer</label>
                <input type="text" name="manufacturer" class="form-control" value="<%= product.manufacturer %>" />
              </div>
              <div class="form-group">
                <label>Dimensions</label>
                <input type="text" name="dimensions" class="form-control" value="<%= product.dimensions %>" />
              </div>
              <div class="form-group">
                <label>Warranty</label>
                <input type="text" name="warranty" class="form-control" value="<%= product.warranty %>" />
              </div>
              <div class="form-group">
                <label>Shipping Info</label>
                <input type="text" name="shippingInfo" class="form-control" value="<%= product.shippingInfo %>" />
              </div>
            </div>
            <div class="card-body">
              <button type="submit" class="btn btn-success">Update</button>
              <a href="/table" class="btn btn-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer.ejs') %>
